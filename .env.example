# Production environment configuration
# Copy this file to .env and update with your GCP values

# Google Cloud Project ID
GCP_PROJECT_ID=your-project-id

# Cloud Run service name
SERVICE_NAME=pdf-to-markdown

# GCP region (default: us-central1)
REGION=us-central1

# Container Registry (default: gcr.io)
CONTAINER_REGISTRY=gcr.io

# Torch device: cpu or cuda (default: cpu)
TORCH_DEVICE=cpu

# Marker service port (default: 8001)
MARKER_PORT=8001

# Next.js port (default: 3000)
PORT=3000

# Node environment
NODE_ENV=production

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Python unbuffered output
PYTHONUNBUFFERED=1
